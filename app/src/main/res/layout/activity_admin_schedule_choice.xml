<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="skuniv.ac.kr.nursetask.UI.Admin.AdminScheduleChoiceActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/today_schedule_choicebtn"
        android:layout_weight="1"

        android:textColor="#FFFFFF"
        android:background="@drawable/admin_choice_schedule"
        android:text="today schedule"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/admin_choice_schedule"
        android:id="@+id/long_term_schedule_choicebtn"
        android:layout_weight="1"
        android:text="long term schedule"
        />
</LinearLayout>
</LinearLayout>
