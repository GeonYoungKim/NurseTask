<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_tab"
    android:orientation="vertical"
    tools:context="skuniv.ac.kr.nursetask.UI.Nurse.InformationActivity">

    <TextView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:text="name"
        android:textSize="30dp"
        android:gravity="left|center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/nurse_name"
        />
    <TextView
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:textSize="30dp"
        android:text="birth"
        android:gravity="left|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nurse_birth"
        />
    <TextView
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:textSize="30dp"
        android:gravity="left|center"
        android:text="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nurse_phone"
        />
    <TextView
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:textSize="30dp"
        android:text="address"
        android:gravity="left|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nurse_address"
        />

</LinearLayout>
